<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
      
<div class="multi-upload hidden">
	<span class="add_files"></span>
	<div class="table-outer">
    <table>
        <thead>
            <tr>
                <th>Filename</th>
                <th>Size</th>
                <th>Progress</th>
            </tr>
        </thead>
        <tbody>
            <t:loop source="uploadedFiles" value="loopFile">
                <tr>
                    <td>${loopFile.fileName}</td>
                    <td><t:output value="loopFile.length" format="byteLengthFormat" /></td>
                    <td>100%</td>
                </tr>
            </t:loop>
        </tbody>
    </table>
	</div>
	<p><t:outputRaw value="${multiDescription}" /></p>
</div>
</html>